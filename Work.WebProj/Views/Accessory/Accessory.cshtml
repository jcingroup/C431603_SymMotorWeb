@model ProcCore.Business.DB0.EditorDetail
@{
    ViewBag.Title = "配件專區";
    ViewBag.BodyClass = "Accessory";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Scripts {
    <script>
        $(window).scroll(function () {
            var h = $('#header').height();
            if ($(this).scrollTop() > h) {
                $('#sidebar, #content').addClass('fixed');
            } else {
                $('#sidebar, #content').removeClass('fixed');
            }
        });
    </script>
}

<h1 class="sr-only">@ViewBag.Title</h1>

@Html.Partial("~/Views/Accessory/Accessory_sidebar.cshtml")

<div class="wrap">

    <section id="content">
        <h2 class="h1">@Model.detail_name</h2>

    <div class="editor">
        @Html.Raw(Model.detail_content)
    </div>

</section><!-- content //-->

</div>