@model ProcCore.Business.DB0.Event
@{
    ViewBag.Title = "精彩活動回顧";
    ViewBag.BodyClass = "Events";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Scripts {
    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 150) {
                $('#sidebar, #content').addClass('fixed');
            } else {
                $('#sidebar, #content').removeClass('fixed');
            }
        });

        //回上一頁
        $('a#goBack').click(function () {
            history.back();
            return false;
        });
    </script>
}

<h1 class="sr-only">@ViewBag.Title</h1>

<aside id="sidebar">
    <h2 class="sr-only">子選單</h2>
    <ul class="submenu">
        <li><a href="#" id="goBack">回前頁</a></li>
    </ul>
</aside><!-- sidebar //-->

<section id="content">

    @* 如果有 Banner *@
    <div id="banner">
        <ul class="list-unstyled">
            @if (Model.banner_imgsrc != null)
            {
                <li><img src="@Model.banner_imgsrc" alt=""></li>
            }
        </ul>
    </div>

    <div class="wrap">
        <h2 class="h1">@Model.event_title</h2>
        <div class="editor">
            @Html.Raw(Model.event_content)
        </div>
    </div>

</section><!-- content //-->