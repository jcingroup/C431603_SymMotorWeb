@{
    ViewBag.Title = "FAQ 常見問題";
    ViewBag.BodyClass = "FAQ p6";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section CSS {
    <link rel="stylesheet" href="~/Content/css/vendor/themify-icons.css">
}
@section Scripts {
    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 150) {
                $('#sidebar, #content').addClass('fixed');
            } else {
                $('#sidebar, #content').removeClass('fixed');
            }
        });
    </script>
}

<h1 class="sr-only">@ViewBag.Title</h1>

@Html.Partial("~/Views/FAQ/FAQ_sidebar.cshtml")

<div class="wrap">

    <section id="content">

        <h2 class="h1">聯絡我們</h2>
        @Html.Partial("~/Views/Shared/Form.cshtml")
        
    </section><!-- content //-->
    
</div>