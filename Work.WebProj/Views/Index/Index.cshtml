@model DotWeb.Controllers.IndexInfo
@{
    ViewBag.Title = "首頁";
    ViewBag.IsFirstPage = true;
    ViewBag.BodyClass = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section css {
    <link href="~/Content/css/swiper.min.css" rel="stylesheet">
}

@section Scripts {
    <script src="~/Content/js/swiper/swiper.min.js"></script>
    <script>
        var swiper = new Swiper('#banner', {
            effect: 'fade',
            autoplay: 2500,
            speed: 500
        });
        var swiper2 = new Swiper('#marquee .swiper-container', {
            nextButton: '.swiper-button-next',
            prevButton: '.swiper-button-prev',
            slidesPerView: 4,
            autoplay: 2000,
            speed: 2000,
            autoplayDisableOnInteraction: false,
            loop: true
        });

        // 因為圖片設定為高度不固定，所以讓banner套用最矮slide的高度，以免跑版
        $(window).load(function(){
            var h = $("#banner .swiper-slide:first-child img").height();
            $("#banner img").each(function(){
                if ($(this).height() < h) { h = $(this).height(); }
            });
            $("#banner").height(h);
        });
    </script>
}

<h1 class="sr-only">@ViewBag.Title</h1>

<div id="banner" class="swiper-container">
    <ul class="swiper-wrapper list-unstyled">
        @foreach (var i in Model.banners)
        {
            if (i.imgsrc != null)
            {
                <li class="swiper-slide">
                    <a href="@i.banner_url" target="new"><img src="@i.imgsrc" alt="@i.banner_name"></a>
                </li>
            }
        }
    </ul>
</div>

<section class="grid-series">
    <div class="wrap">

        <h2 class="h2" title="ALL SERIES">ALL SERIES</h2>
        <h3 class="h3">優質的服務．誠懇的態度－是順益汽車對您不變的承諾！</h3>

        <div id="marquee">
            <div class="swiper-container">
                <ol class="swiper-wrapper list-unstyled">
                    @foreach (var i in Model.brands)
                    {
                        if (i.imgsrc != null)
                        {
                            <li class="swiper-slide">
                                <h4 class="h4">@i.brand_name</h4>
                                <a href="~/Products?id=@i.brand_id"><img src="@i.imgsrc" alt=""></a>
                            </li>
                        }
                    }
                </ol>
            </div>
            <a class="prev swiper-button-prev" href=""></a>
            <a class="next swiper-button-next" href=""></a>
        </div>

    </div>
</section>

<div class="grid-news">
    <div class="wrap">
        <section class="article-list">
            <h2 class="h2">NEWS</h2>
            @foreach (var i in Model.news)
            {
                <article class="article">
                    <h3 class="h3">
                        <small>@i.day.ToString("yyyy/MM/dd")</small>
                        <a href="~/News/Content?id=@i.news_id">@i.news_title</a>
                    </h3>
                    <p>@i.news_info</p>
                </article>
            }
        </section>
        <aside class="fb">
            <h2 class="sr-only">Facebook</h2>
            <div id="fb-root"></div>
            <script>
                (function (d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (d.getElementById(id)) return;
                    js = d.createElement(s); js.id = id;
                    js.src = "//connect.facebook.net/zh_TW/sdk.js#xfbml=1&version=v2.3";
                    fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));</script>
            <div class="fb-page" data-href="@Model.facebook_url" data-width="100%" data-height="460" data-hide-cover="false" data-show-facepile="false" data-show-posts="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="@Model.facebook_url"><a href="@Model.facebook_url">順益汽車 Fan Club 粉絲專頁</a></blockquote></div></div>
        </aside>
    </div>
</div>

<section class="grid-count">
    <div class="wrap">
        <h2 class="h2">
            <span>歡迎您的蒞臨，您是第 <strong>00648589</strong> 位訪客</span>
        </h2>
    </div>
</section>


