@{
    ViewBag.Title = "貸款專區";
    ViewBag.BodyClass = "Loan p4";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Scripts {
    <!--[if lt IE 9]>
        <script src="/node_modules/es5-shim/es5-shim.js"></script>
        <script src="/node_modules/es5-shim/es5-sham.js"></script>
        <script src="/node_modules/console-polyfill/index.js"></script>
    <![endif]-->

    <script>
        $(window).scroll(function () {
            var h = $('#header').height();
            if ($(this).scrollTop() > h) {
                $('#sidebar, #content').addClass('fixed');
            } else {
                $('#sidebar, #content').removeClass('fixed');
            }
        });
    </script>
    <script src="~/Scripts/googleReCAPTCHA.js"></script>
    <script src='https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit'></script>
    @if ((bool)ViewBag.ie8)
    {
        <script src="~/Scripts/src/tsx/w-loan_email_forie8.js"></script>
    }
    else {
        <script src="~/Scripts/build/app/vendorsforweb.js"></script>
        <script src="~/Scripts/build/app/vendors.js?v=@CommWebSetup.CacheVer"></script>
        <script src="~/Scripts/build/app/w_loan_email.js?v=@CommWebSetup.CacheVer"></script>
    }
}

<h1 class="sr-only">@ViewBag.Title</h1>

@Html.Partial("~/Views/Loan/Loan_sidebar.cshtml")

<div class="wrap">

    <section id="content">

        <h2 class="h1">線上申貸表格</h2>
        @if ((bool)ViewBag.ie8)
        {
            <h5 class="h5">請填妥以下基本資料，我們將有專人為您處理。</h5>

            <hr>

            <form action="" class="form" id="SendEmail">
                <div class="row">

                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="" class="control-label">姓名 <small class="text-danger">*</small></label>
                            <input type="text" class="form-control c-input" id="m_name" required>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="" class="control-label">性別 <small class="text-danger">*</small></label>
                            <div class="c-radio-group">
                                <label class="c-input c-radio">
                                    <input id="radio1" name="radio" type="radio" value="true" required>
                                    <span class="c-indicator">男</span>
                                </label>
                                <label class="c-input c-radio">
                                    <input id="radio2" name="radio" type="radio" value="false" required>
                                    <span class="c-indicator">女</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="" class="control-label">E-mail <small class="text-danger">*</small></label>
                            <input type="email" class="form-control c-input" id="m_email" required>
                        </div>
                    </div>

                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label for="" class="control-label">連絡電話 <small class="text-danger">*</small></label>
                            <input type="tel" class="form-control c-input" id="m_tel" required>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="form-group">
                            <label for="" class="control-label">請選擇申貸項目 <small class="text-danger">*</small></label>
                            <select name="" id="m_loan_project" class="form-control c-select">
                                <option value="" selected disabled>請選擇</option>
                                <option value="新車購車分期">新車購車分期</option>
                                <option value="中古車貸款申請">中古車貸款申請</option>
                            </select>
                        </div>
                    </div>

                    <div id="loan-content"></div>

                    <div class="col-xs-12">
                        <div class="form-group c-inputs-stacked">
                        </div>
                        <div class="form-group">
                            <label for="" class="sr-only">驗證</label>
                            <div id="Validate"></div>

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg">填寫完成，送出資料</button>
                        </div>
                    </div>
                </div>
            </form>
        }
        else {
            <div id="email_content"></div>
        }

    </section><!-- content //-->

</div>