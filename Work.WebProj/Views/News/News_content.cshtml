@model ProcCore.Business.DB0.News
@{
    ViewBag.Title = "最新消息";
    ViewBag.BodyClass = "News";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Scripts {
    <script>
        $(window).scroll(function () {
            var h = $('#header').height();
            if ($(this).scrollTop() > h) {
                $('#sidebar, #content').addClass('fixed');
            } else {
                $('#sidebar, #content').removeClass('fixed');
            }
        });

        //回上一頁
        $('a#goBack').click(function () {
            history.back();
            return false;
        });
    </script>
}

<aside id="sidebar">
    <h2 class="sr-only">子選單</h2>
    <ul class="submenu wrap list-inline">
        <li><a href="#" id="goBack">回前頁</a></li>
    </ul>
</aside><!-- sidebar //-->

<div class="wrap">

    <h1 class="h1">@ViewBag.Title</h1>

    <section id="content">

        <h2 class="sr-only">News</h2>

        <article class="article">
            <h3 class="h2">
                <small>@Model.day.ToString("yyyy/MM/dd")</small>
                <a href="~/News/Content?id=@Model.news_id">@Model.news_title</a>
            </h3>
            <div class="editor">
                @Html.Raw(Model.news_content)

            </div>
        </article>

    </section><!-- content //-->

</div>