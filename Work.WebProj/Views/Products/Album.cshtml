@model List<ProcCore.Business.DB0.BrandAlbumDetail>
@{
    ViewBag.Title = "車款展示";
    ViewBag.BodyClass = "Products";
    Layout = null;
}
<!DOCTYPE html>
<html class="popup" lang="zh-tw">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>車款展示:順益汽車股份有限公司 SHUNG YE MOTORS CO.</title>
    <link rel="stylesheet" href="~/Content/css/vendor/themify-icons.css">
    <link href="~/Content/css/swiper.min.css" rel="stylesheet">
    <link href="~/Content/css/popup.css" rel="stylesheet">
    <script src="~/Scripts/cdn/BrowerInfo.js"></script>
</head>
<body class="popup">

    <div class="popup-content">

        <div class="swiper-container gallery-top">
            <div class="swiper-wrapper">
            @foreach (var i in Model)
            {
                if (i.imgsrc != null)
                {
                    <div class="swiper-slide">
                        <img src="@i.imgsrc" alt="">
                        @* 如果有圖說 *@
                        <span class="caption">@i.detail_name</span>
                    </div>
                }
            }
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
        
        <!--[if gte IE 9]><!-->
            <div class="swiper-container gallery-thumbs">
                <div class="swiper-wrapper">
                @foreach (var i in Model)
                {
                    if (i.imgsrc != null)
                    {
                        <div class="swiper-slide"><img src="@i.imgsrc" alt="@i.detail_name"></div>
                    }
                }
                </div>
            </div>
        <!--<![endif]-->

    </div>
    
    <!--[if gte IE 9]><!-->
        <script src="~/Content/js/swiper/swiper.min.js"></script>
        <script>
            var galleryTop = new Swiper('.gallery-top', {
                nextButton: '.swiper-button-next',
                prevButton: '.swiper-button-prev',
                spaceBetween: 10,
            });
            var galleryThumbs = new Swiper('.gallery-thumbs', {
                spaceBetween: 10,
                centeredSlides: true,
                slidesPerView: 'auto',
                slideToClickedSlide: true,
                keyboardControl: true,
            });
            galleryTop.params.control = galleryThumbs;
            galleryThumbs.params.control = galleryTop;
        </script>
    <!--<![endif]-->

</body>
</html>